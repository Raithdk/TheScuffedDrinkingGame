<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/higherLower"
    android:background="#f9ef77"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".higherLowerActivity">

    <Button
        android:id="@+id/startBtn"
        android:layout_width="399dp"
        android:layout_height="88dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:text="Start!"
        android:textSize="24sp"
        android:onClick="onStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/higherLowerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Higher or Lower?"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fakeView"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/diceRollBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lowerBtn"
        android:layout_width="@dimen/size"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:onClick="onRoll"
        android:background="@drawable/button_ripple_red"
        android:text="Lower"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/startBtn"
        app:layout_constraintEnd_toStartOf="@+id/fakeView"
        app:layout_constraintStart_toStartOf="@+id/startBtn" />

    <Button
        android:id="@+id/higherBtn"
        android:layout_width="@dimen/size"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:onClick="onRoll"
        android:background="@drawable/button_ripple_green"
        android:text="Higher"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/startBtn"
        app:layout_constraintEnd_toStartOf="@+id/fakeView"
        app:layout_constraintStart_toEndOf="@+id/startBtn" />

    <TextView
        android:id="@+id/numberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/startBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/higherLowerLabel" />

    <TextView
        android:id="@+id/rangeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="[1-10]"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/higherLowerLabel" />

    <TextView
        android:id="@+id/guessView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/numberView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/streakView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Streak : 0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberView" />
</androidx.constraintlayout.widget.ConstraintLayout>